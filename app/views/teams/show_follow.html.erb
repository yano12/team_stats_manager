<% provide(:title, @title) %>
<div class="player-background text-white">
  <div class="title-bar">
    <h1><%= link_to @team.name, @team, class:"hover-white" %></h1>
  </div>
  <div class="container body-container">
    <h3 class="follow_header"><%= @header %></h3>
    <% if @teams.any? %>
      <%#= will_paginate previous_label: ' &lt 前へ', next_label: '次へ &gt' %>
      <div class="row flex">
        <ul class="teams follow">
          <%= render @teams %>
        </ul>
      </div>
      <%= will_paginate previous_label: ' &lt 前へ', next_label: '次へ &gt' %>
    <% end %>
  </div>
</div>
<% provide(:title, "Edit team") %>
<% provide(:team_submit, "変更を保存する") %>
<div class="player-background text-white">
  <div class="title-bar">
    <h1>チーム管理</h1>
  </div>
  <div class="container body-container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= render 'team_form'%>
        <div class="gravatar_edit">
          <%= gravatar_for @team %>
          <a href="http://gravatar.com/emails" target="_blank" rel="noopener" class="hover-white">
            <br>画像を変更
          </a>
        </div>
        <%= link_to "チームを削除する", @team, method: :delete,
                                      data: { confirm: "You sure?" },
                                      class: "hover-white f-right" %>
      </div>
    </div>
  </div>
</div>
<% if logged_in? %>
  <%= form_for [micropost, comment], remote: true do |f| %>
    <%= f.hidden_field :parent_id %>
    <%= f.text_area :content, size:'30x10', label: false,
                    id: 'comment-text', class: 'form-control input-sm',
                    placeholder: (f.object.parent_id.nil? ? 'コメントする' : 'コメントに返信する') %>
    <%= f.submit (f.object.parent_id.nil? ? 'コメントを投稿' : '返信を投稿'), class: 'btn btn-orange float-xs-right comment-action' %>
  <% end %>
<% end %>
<% provide(:title, "Log in Player") %>
<div class="player-background text-white">
  <div class="title-bar">
    <h1>ログイン</h1>
  </div>
  <div class="container body-container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(:session, url: login_path) do |f| %>
          
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: 'form-control' %>
          
          <%= f.label :password, "パスワード" %>
          <%= link_to "(パスワードを忘れた)", new_password_reset_path %>
          <%= f.password_field :password, class: 'form-control' %>
          
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>ログイン状態を保持する</span>
          <% end %>
        
          <%= f.submit "ログイン", class: "btn btn-orange" %>
        <% end %>
      
        <p>アカウントを持っていない場合： <%= link_to "新規登録", signup_path, class: "hover-white bold" %></p>
      </div>
    </div>
  </div>
</div>
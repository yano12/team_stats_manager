<% provide(:title, 'Message') %>
<div class="player-background text-white">
  <div class="title-bar">
    <h1>メッセージ</h1>
  </div>
  <div class="container body-container">
    <%= will_paginate @feed_players, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
    
    <!--  検索拡張機能  -->
    <p>メッセージを送信するプレイヤーを選択してください</p>
    <%= form_tag(players_path, method: :get) do %>
      <%= text_field_tag :search %>
      <%= submit_tag 'プレイヤー検索', name: nil, class: "btn btn-orange" %>
    <% end %>
    
    <ul class="players">
      <div class="row flex">
        <% @feed_players.each do |player| %>
          <div class="col-md-6">
            <li class="player-index">
              <%= gravatar_for player, size: 50 %>
              <%= link_to player.name, message_show_player_path(player), class: "hover-white" %>
                @<%= player.team.name %>
              <br><p><%= player.grade %>年 / <%= player.position %> /<%= player.height %>cm/<%= player.weight %>kg/ <%= player.old_school %></p>
            </li>
          </div>
        <% end %>
      </div>
    </ul>
    <%= will_paginate @feed_players, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
  </div>
</div>